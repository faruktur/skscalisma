@model SksCalisma.Models.Birim
@using (Html.BeginForm("Edit", "Birim", FormMethod.Post, new { Area = "Admin" }))
            {
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-horizontal editForm">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group form-md-line-input">
                @Html.HiddenFor(model => model.birimID)
                @Html.HiddenFor(model => model.birimKontejyanID)
            </div>
            <div class="form-group form-md-line-input">
                @Html.LabelFor(model => model.BirimTip.birimTurID, "Birim Türü", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("birimTurID", null, "", htmlAttributes: new { @class = "form-control editbirimTurID", onchange = "SelectChange(edit)" })
                    @Html.ValidationMessageFor(model => model.BirimTip.birimTurID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-md-line-input">
                @Html.LabelFor(model => model.birimTipID, "Birim Tipi", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.birimTipID, Enumerable.Empty<SelectListItem>(), "", htmlAttributes: new { @class = "form-control editbirimTipID" })
                    @Html.ValidationMessageFor(model => model.birimTipID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-md-line-input">
                @Html.LabelFor(model => model.birimAd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.birimAd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.birimAd, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-md-line-input">
                @Html.LabelFor(model => model.birimAkademikCalisan, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.birimAkademikCalisan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.birimAkademikCalisan, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-md-line-input">
                @Html.LabelFor(model => model.birimIdariCalisan, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.birimIdariCalisan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.birimIdariCalisan, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn green" value="Kaydet">
    </div>
}