@model List<SksCalisma.Models.Bolum>
<div class="box">
    @using (Ajax.BeginForm("GetCreateForm", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "creatediv", LoadingElementId = "createloading" }))
    {
        <input type="hidden" value="@ViewBag.birimID" name="id" />
        <input type="submit" value="Yeni Bölüm Oluştur" class="btn btn-outline green sbold" data-toggle="modal" data-target="#createModal" />
    }
</div><br />
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>Bölümler
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-advance table-hover">
            <thead>
                <tr>
                    <th colspan="2">Bölüm Adı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.bolumAd
                        </td>
                        <td>
                            <button class="btn btn-outline green" type="button" data-toggle="collapse" data-target="@string.Format("#buttonlar{0}", item.bolumID)" aria-expanded="false" aria-controls="@string.Format("buttonlar{0}", item.bolumID)">
                                <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                    <tr class="collapse fade" id="@string.Format("buttonlar{0}", item.bolumID)">
                        <td colspan="2">
                            <div class="col-sm-4">
                                @using (Ajax.BeginForm("GetKontForm", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "kontdiv", LoadingElementId = "kontloading" }))
                                {
                                    <input type="hidden" value="@item.bolumID" name="id" />
                                    <input type="submit" value="Kontenjan Belirle" class="btn btn-outline green form-control" data-toggle="modal" data-target="#kontModal" />
                                }
                            </div>
                            <div class="col-sm-4">
                                @using (Ajax.BeginForm("GetEditForm", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "editdiv", LoadingElementId = "editloading" }))
                                {
                                    <input type="hidden" value="@item.bolumID" name="id" />
                                    <input type="submit" value="Düzenle" class="btn btn-outline green form-control" data-toggle="modal" data-target="#editModal" />
                                }
                            </div>
                            <div class="col-sm-4">
                                @using (Ajax.BeginForm("GetDeleteForm", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "deletediv", LoadingElementId = "deleteloading" }))
                                {
                                    <input type="hidden" value="@item.bolumID" name="id" />
                                    <input type="submit" value="Sil" class="btn btn-outline green form-control" data-toggle="modal" data-target="#deleteModal" />
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
