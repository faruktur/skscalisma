                    <div class="col-md-12">
                        <div class="note note-success">
                            <h3>Bootstrap-select</h3>
                            <p>
                                Anket Bilgi- Detaylar  - ....
                            </p>
                        </div>
                        <!-- BEGIN PORTLET-->

                        <div class="portlet light form-fit ">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="icon-social-dribbble font-green"></i>
                                    <span class="caption-subject font-green bold uppercase">Anket</span>
                                </div>
                                
                            </div>
                       <div class="portlet-body form">                            
                                @*<form action="index.html" class="form-horizontal form-row-seperated"></form>*@
                              @using (Html.BeginForm("Cevapla", "Anket", FormMethod.Post, new { @class = "form-horizontal form-row-seperated" }))
                              {
                                 
                                    <div class="form-body">
                                        @for (var i = 0; i < Model.main_model_list.Count; i++)
                                        {
                                            <div class="form-group">

                                               <label class="control-label col-md-8"> @Model.main_model_list[i].soru.anketSoruIcerik </label>
                                                <div class="col-md-4">
                                                    @Html.DropDownListFor(x => Model.main_model_list[i].Selected, new SelectList(Model.main_model_list[i].ddl, "Value", "Text", Model.main_model_list[i].Selected), new { @class = "bs-select form-control",place_holder ="Seçiniz. " })
                                                </div>
                                          </div>

                                        }

                                        
                                                                   
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button type="submit" class="btn green">
                                                    <i class="fa fa-check"></i> Anketi Bitir
                                                </button>
                                                <button type="button" class="btn default">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                
                           }
