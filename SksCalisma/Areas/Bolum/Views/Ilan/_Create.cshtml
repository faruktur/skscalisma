                    @Html.ValidationMessageFor(model => model.ogrenimTipID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-md-line-input">
                @Html.LabelFor(model => model.ilanMetni, htmlAttributes: new { @class = "control-label col-md-2" })
