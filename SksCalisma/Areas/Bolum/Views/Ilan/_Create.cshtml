                    @Html.DropDownList("calismaTipID", (IEnumerable<SelectListItem>)ViewContext.Controller.ViewBag.calismaTipID, "", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.calismaTipID, "", new { @class = "text-danger" })
