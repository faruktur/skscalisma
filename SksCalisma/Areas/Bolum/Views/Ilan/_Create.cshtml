                            <option value="6">Pazartesi</option>
                            <option value="7">Salı</option>
                            <option value="8">Çarşamba</option>
                            <option value="9">Perşembe</option>
                            <option value="10">Cuma</option>
                        </optgroup>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-10 col-md-2">
                    <button type="submit" class="btn blue">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
}